<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Explorar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- TÃ­tulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explorar"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/dark_green"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_filters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="8dp"
            android:layout_marginBottom="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Todo"
                app:chipBackgroundColor="@color/viridian"
                android:textColor="@color/white"
                app:chipIcon="@drawable/ic_public"/>

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lugares"
                app:chipBackgroundColor="@color/ash_gray"
                android:textColor="@color/brunswick_green"
                app:chipIcon="@drawable/ic_location_24"/>

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cultura"
                app:chipBackgroundColor="@color/ash_gray"
                android:textColor="@color/brunswick_green"
                app:chipIcon="@drawable/ic_culture"/>

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comida"
                app:chipBackgroundColor="@color/ash_gray"
                android:textColor="@color/brunswick_green"
                app:chipIcon="@drawable/ic_food"/>

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leyendas"
                app:chipBackgroundColor="@color/ash_gray"
                android:textColor="@color/brunswick_green"
                app:chipIcon="@drawable/ic_legend"/>
        </com.google.android.material.chip.ChipGroup>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ProgressBar
            android:id="@+id/progress"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_width="48dp"
            android:layout_height="48dp"/>



    </LinearLayout>
</FrameLayout>