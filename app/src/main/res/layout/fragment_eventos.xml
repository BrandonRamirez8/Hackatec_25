<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Eventos">

    <include
        android:id="@+id/fragment_header"
        layout="@layout/fragment_header" />

    <TextView
        android:id="@+id/tv_cultural_events_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eventos Culturales"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/text_color_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_header" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cultural_events"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_cultural_events_title"
        tools:listitem="@layout/item_event" />

</androidx.constraintlayout.widget.ConstraintLayout>