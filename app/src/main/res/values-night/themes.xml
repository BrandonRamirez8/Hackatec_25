<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Xalli" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary branding colors -->
        <item name="colorPrimary">@color/brunswick_green</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary branding colors -->
        <item name="colorSecondary">@color/cambridge_blue</item>
        <item name="colorSecondaryVariant">@color/ash_gray</item>
        <item name="colorOnSecondary">@color/dark_green</item>

        <!-- Background and surface -->
        <item name="android:colorBackground">@color/dark_green</item>
        <item name="colorSurface">@color/brunswick_green</item>
        <item name="colorOnSurface">@color/ash_gray</item>

        <!-- Text and links -->
        <item name="android:textColor">@color/ash_gray</item>
        <item name="android:textColorLink">@color/cambridge_blue</item>

        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_green</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/brunswick_green</item>
    </style>
</resources>